xture2D\u0026gt;  tex = MakeShared\u0026lt;Texture2D\u0026gt;(context_);\ntex-\u0026gt;SetSize(img-\u0026gt;GetWidth(), img-\u0026gt;GetHeight(), Graphics::GetRGBAFormat());\ntex-\u0026gt;SetData(img, true);\nBorderImage  * bi = uiRoot_-\u0026gt;CreateChild\u0026lt;BorderImage\u0026gt;();\nbi-\u0026gt;SetBlendMode(BLEND_ADD);\nbi-\u0026gt;SetSize(128, 128);\nbi-\u0026gt;SetTexture(tex);\nbi-\u0026gt;SetPosition(0, 0);\n\nSharedPtr\u0026lt;Texture2D\u0026gt;  tex2 = MakeShared\u0026lt;Texture2D\u0026gt;(context_);\ntex2-\u0026gt;SetData(img2, true);\nBorderImage  * bi2 = uiRoot_-\u0026gt;CreateChild\u0026lt;BorderImage\u0026gt;();\nbi2-\u0026gt;SetBlendMode(BLEND_ADD);\nbi2-\u0026gt;SetSize(128, 128);\nbi2-\u0026gt;SetTexture(tex2);\nbi2-\u0026gt;SetPosition(128, 0);\n\u003c/code\u003e\u003c/pre\u003e\n\u003cp\u003e\u003cimg src=\"https://global.discourse-cdn.com/standard17/uploads/urho3d/original/2X/a/a639e2dfa8d69e061b317129c95024c2379254f8.png\" alt=\"%E5%9C%96%E7%89%87\" data-base62-sha1=\"nIvhpf1g3tT37A0Sx3Nma7BnI0g\" width=\"646\" height=\"500\"\u003e\u003c/p\u003e","post_number":8,"post_type":1,"updated_at":"2019-06-17T17:08:04.943Z","reply_count":0,"reply_to_post_number":5,"quote_count":0,"incoming_link_count":0,"reads":21,"readers_count":20,"score":79.2,"yours":false,"topic_id":5235,"topic_slug":"flip-only-part-of-identical-images","display_username":"ab4daa","primary_group_name":null,"flair_name":null,"flair_url":null,"flair_bg_color":null,"flair_color":null,"version":1,"can_edit":false,"can_delete":false,"can_recover":false,"can_wiki":false,"read":true,"user_title":null,"reply_to_user":{"username":"Taqer","name":"","avatar_template":"https://avatars.discourse-cdn.com/v4/letter/t/d2c977/{size}.png"},"bookmarked":false,"actions_summary":[{"id":2,"count":3}],"moderator":false,"admin":false,"staff":false,"user_id":867,"hidden":false,"trust_level":2,"deleted_at":null,"user_deleted":false,"edit_reason":null,"can_view_edit_history":true,"wiki":false,"can_accept_a