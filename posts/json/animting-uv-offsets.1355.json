 stuff - ValueAnimation\u003c/p\u003e\n\u003cp\u003e[code]\tMaterial* seaFoamMaterial = cache-\u0026gt;GetResource(‚ÄúMaterials/UL_MAT/MAT_SEAFOAM.xml‚Äù);\u003cbr\u003e\nSharedPtr uvShiftAnimation (new ValueAnimation(context_));\u003c/p\u003e\n\u003cpre\u003e\u003ccode\u003euvShiftAnimation-\u0026gt;SetKeyFrame(0.0f, Vector2(0.0f, 0.3f));\nuvShiftAnimation-\u0026gt;SetKeyFrame(2.0f, Vector2(0.0f, 0.7f));\nuvShiftAnimation-\u0026gt;SetKeyFrame(3.0f, Vector2(0.0f, 0.5f));\nuvShiftAnimation-\u0026gt;SetKeyFrame(4.0f, Vector2(0.0f, 0.4f));\nuvShiftAnimation-\u0026gt;SetKeyFrame(5.0f, Vector2(0.0f, 0.3f));\n\nseaFoamMaterial-\u0026gt;SetShaderParameterAnimation(\"UVOffset\",uvShiftAnimation );\nseaFoamMaterial-\u0026gt;SetScene(Scene);[/code]\u003c/code\u003e\u003c/pre\u003e","post_number":3,"post_type":1,"updated_at":"2017-01-02T01:07:09.365Z","reply_count":0,"reply_to_post_number":null,"quote_count":0,"incoming_link_count":0,"reads":19,"readers_count":18,"score":3.8,"yours":false,"topic_id":1355,"topic_slug":"animting-uv-offsets","display_username":"","primary_group_name":null,"flair_name":null,"flair_url":null,"flair_bg_color":null,"flair_color":null,"version":1,"can_edit":false,"can_delete":false,"can_recover":false,"can_wiki":false,"link_counts":[{"url":"http://savepic.su/6133397.htm","internal":false,"reflection":false,"title":"–ü—Ä–æ—Å–º–æ—Ç—Ä –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è 6133397 | –°–µ—Ä–≤–∏—Å –ø—É–±–ª–∏–∫–∞—Ü–∏–∏ –∏ —Ö—Ä–∞–Ω–µ–Ω–∏—è –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π : —Ö–æ—Å—Ç–∏–Ω–≥ –∫–∞—Ä—Ç–∏–Ω–æ–∫ : —Ä–∞–∑–º–µ—â–µ–Ω–∏–µ —Ñ–æ—Ç–æ–∫ : –º–µ—Å—Ç–æ –¥–ª—è —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏–π : —Ñ–æ—Ç–æ—Ö–æ—Å—Ç–∏–Ω–≥ : Free Image Hosting","clicks":0},{"url":"https://discourse.urho3d.io/t/uv-manipulation-inside-the-engine/5382/7","internal":true,"reflection":true,"title":"UV manipulation inside the engine","clicks":1}],"read":true,"user_title":null,"bookmarked":false,"actions_summary":[],"moderator":false,"admin":false,"staff":false,"user_id":148,"hidden":false,"trust_level":2,"deleted_at":null,"us